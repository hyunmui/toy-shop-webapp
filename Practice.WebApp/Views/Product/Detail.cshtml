@model Practice.Models.Product

@{
    ViewBag.Title = "Product: " + Model.Name;
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Update" method="post" class="form">
    <div class="form-group row">
        <label asp-for="Id" class="col-3"></label>
        <div class="col-6">
            @Html.DisplayTextFor(m => m.Id)
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-3"></label>
        <input asp-for="Name" class="col-6 form-control" />
    </div>
    <div class="form-group row">
        <label asp-for="Amount" class="col-3"></label>
        <input asp-for="Amount" class="col-6 form-control" />
    </div>
    
    <input type="hidden" asp-for="Status" />
    
    <button type="submit">Update Product</button>
    <a asp-action="List">
        <button type="button">Back</button>
    </a>
</form>