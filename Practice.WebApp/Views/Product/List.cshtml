@using Practice.WebApp.Controllers
@model ProductListViewModel

@{
    ViewBag.Title = "Product List";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<table class="table table-dark">
    <thead>
    <tr>
        <th>No</th>
        <th>Product Name</th>
        <th>Amount</th>
        <th>Created Date</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model.Products)
    {
        <tr>
            <td>@product.Id</td>
            <td>
                <a asp-action="Detail" asp-route-id="@product.Id">@product.Name</a>
            </td>
            <td>@product.Amount</td>
            <td>@product.CreatedUtc</td>
        </tr>
    }
    </tbody>
</table>
<div>
    <a asp-action="New">New</a>
</div>